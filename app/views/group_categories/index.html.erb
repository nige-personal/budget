<p id="notice"><%= notice %></p>

<h1>Group Categories</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @group_categories.each do |group_category| %>
      <tr>
        <td><%= group_category.category.name %></td>
        <td><%= group_category.group.name %></td>
        <td><%= link_to 'Show', group_category %></td>
        <td><%= link_to 'Edit', edit_group_category_path(group_category) %></td>
        <td><%= link_to 'Destroy', group_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

