<p id="notice"><%= notice %></p>

<h1>Transaction Items</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Category</th>
      <th>Amount</th>
      <th>Description</th>
      <th>Transaction header</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transaction_items.each do |transaction_item| %>
      <tr>
        <td><%= transaction_item.category.name %></td>
        <td><%= transaction_item.amount %></td>
        <td><%= transaction_item.description %></td>
        <td><%= transaction_item.transaction_header.id %></td>
        <td><%= link_to 'Show', transaction_item %></td>
        <td><%= link_to 'Edit', edit_transaction_item_path(transaction_item) %></td>
        <td><%= link_to 'Destroy', transaction_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction Item', new_transaction_item_path %>
