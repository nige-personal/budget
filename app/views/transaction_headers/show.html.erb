<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @transaction_header.user.email %>
</p>

<p>
  <strong>Transaction date:</strong>
  <%= @transaction_header.transaction_date %>
</p>

<p>
  <strong>Account:</strong>
  <%= @transaction_header.account.name %>
</p>

<p>
  <strong>Supplier:</strong>
  <%= @transaction_header.supplier.name %>
</p>

<p>
  <strong>Sign:</strong>
  <%= @transaction_header.sign %>
</p>

<p>
  <strong>Reconciled:</strong>
  <%= @transaction_header.reconciled %>
</p>

<p>
  <strong>Total:</strong>
  <%= @transaction_header.total %>
</p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Category</th>
      <th>Amount</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transaction_items.each do |item| %>
      <tr>
        <td><%= Category.find(item.category_id).name %></td>
        <td><%= item.amount %></td>
        <td><%= item.description %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_transaction_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Edit', edit_transaction_header_path(@transaction_header) %> |
